#include <iostream>     //Задача 2
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");

	int n,M;
	int arr[50][50];
	int suma = 0;

	cout << "Введите количество элементов матрицы: ";
	cin >> n;
	M = (n * (n * n + 1)) / 2;

	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			cin >> arr[i][j];
		}
	}
	
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			suma += arr[i][j];
		}
	}
	if (M == (suma / n)) {
		cout << "YES" << endl;
		cout << "Сумма всех строк, столбцов и диагоналей равна " << suma / n<<endl;
	}
	else {
		cout << "NO" << endl;
	}

	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			cout<< arr[i][j]<<" ";
		}
		cout << endl;
	}


	return 0;
}
