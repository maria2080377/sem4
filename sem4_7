#include <iostream>     //Задача 7
using namespace std;

void gaussJordan(double matrix[3][4]) {
    int n = 3;
    for (int i = 0; i < n; i++) {
        double pivot = matrix[i][i];
        for (int j = 0; j <= n; j++) {
            matrix[i][j] /= pivot;
        }
        for (int k = 0; k < n; k++) {
            if (k != i) {
                double factor = matrix[k][i];
                for (int j = 0; j <= n; j++) {
                    matrix[k][j] -= factor * matrix[i][j];
                }
            }
        }
    }
}

int main() {
    double matrix[3][4] = {
        {1, 1, 1, 6},
        {2, -1, 3, 14},
        {-1, 4, -1, 2}
    };

    gaussJordan(matrix);

    for (int i = 0; i < 3; i++) {
        cout << "x" << i + 1 << " = " << matrix[i][3] << endl;
    }

    return 0;
}
